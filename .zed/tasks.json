// Project tasks configuration. See https://zed.dev/docs/tasks for documentation.
[
  {
    "label": "server: docker compose up",
    "command": "docker compose -f ./apps/server/docker-compose.yaml up",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "reveal_target": "dock",
    "hide": "never",
    "shell": "system",
    "show_summary": true,
    "show_command": true
  },
  {
    "label": "server: dev",
