// Project tasks configuration. See https://zed.dev/docs/tasks for documentation.
[
	{
		"label": "server: database up",
		"command": "podman-compose -f ./apps/server/podman-compose.yaml up",
		"use_new_terminal": true,
		"allow_concurrent_runs": false,
		"reveal": "always",
		"reveal_target": "dock",
		"hide": "never",
		"shell": "system",
		"show_summary": true,
		"show_command": true
	},
	{
		"label": "server: dev",
		"command": "pnpm --filter ./apps/server dev",
		"use_new_terminal": true,
		"allow_concurrent_runs": false,
		"reveal": "always",
		"reveal_target": "dock",
		"hide": "never",
		"shell": "system",
		"show_summary": true,
		"show_command": true
	},
	{
		"label": "client: dev",
		"command": "pnpm --filter ./apps/client dev",
		"use_new_terminal": true,
		"allow_concurrent_runs": false,
		"reveal": "always",
		"reveal_target": "dock",
		"hide": "never",
		"shell": "system",
		"show_summary": true,
		"show_command": true
	},
	{
		"label": "run diagnostics",
		"command": "pnpm -r format && pnpm -r lint && pnpm -r typecheck",
		"use_new_terminal": false,
		"allow_concurrent_runs": false,
		"reveal": "no_focus",
		"hide": "on_success",
		"shell": "system",
		"show_summary": true,
		"show_command": true
	},
	{
		"label": "apply lint",
		"command": "pnpm -r lint --fix",
		"use_new_terminal": false,
		"allow_concurrent_runs": false,
		"reveal": "no_focus",
		"hide": "on_success",
		"shell": "system",
		"show_summary": true,
		"show_command": true
	},
	{
		"label": "apply format",
		"command": "pnpm -r format",
		"use_new_terminal": false,
		"allow_concurrent_runs": false,
		"reveal": "no_focus",
		"hide": "on_success",
		"shell": "system",
		"show_summary": true,
		"show_command": true
	},
	{
		"label": "run typecheck",
		"command": "pnpm -r typecheck",
		"use_new_terminal": false,
		"allow_concurrent_runs": false,
		"reveal": "no_focus",
		"hide": "on_success",
		"shell": "system",
		"show_summary": true,
		"show_command": true
	}
]
